- content_for :meta_title do
  = @link.title
%h1= link_to(@link.title, @link.url)
%p= @link.body.blank? ? @link.blurb : ninja_parse(@link.body)
%p= link_to("Visit site", @link.url)
= clear
- unless @link.tags.empty?
  %p
    Tags:
    = @link.tags.collect{|tag| link_to(tag, "/links?tag=#{URI.escape(tag.name)}")}.join(', ')
= render :partial => "sidebar"

