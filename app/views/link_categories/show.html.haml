- content_for :meta_title do
  = @link_category.title
  = @cms_config['site_settings']['link_title'].pluralize unless @cms_config['site_settings']['hide_link_title_from_heading']
  = " - Page #{params[:page]}" if params[:page]
- content_for :meta_description do
  = "A listing of site links for the #{@link_category.title} category."
  = " - Page #{params[:page]}" if params[:page]
= render :partial => "shared/slice", :locals => {:column_section_id => nil, :controller => "link_categories", :action => "show"}, :collection => @main_column_sections

- if !@cms_config['site_settings']['enable_responsive_layouts']
  = render :partial => "links/sidebar"
