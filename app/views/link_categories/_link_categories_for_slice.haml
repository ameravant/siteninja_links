- @link_categories = LinkCategory.find(:all)
%h2.top-headline= section.title
%ul.list_of_links
  - for category in @link_categories
    - unless category.links.empty?
      - if @link_category and @link_category == category
        %li.sidebar_link_active= h(category.title)
      - else
        %li= link_to(h(category.title), category)